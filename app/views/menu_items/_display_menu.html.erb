<section class="ShowMenuItemPage">
  <% @menu_items.each do |menu_item| %>
    <div class="ShowMenuItem">
      <div class="ShowMenuItemPage-mainDetails">
        <p class="ShowMenuItemPage-menuItemName"> <%= menu_item.menu_item_name %> </p>
        <p class="ShowMenuItemPage-price">â‚¹ <%= menu_item.menu_item_price %> </p>
      </div>
      <% if @current_user.is_owner(@current_user.id) %>
        <p class="ShowMenuItemPage-options">
          [<%= link_to "Edit", edit_menu_item_path(menu_item, :current_menu_id => @current_menu_id) %>]
          [<%= link_to "Remove", menu_item_path(menu_item, :current_menu_id => @current_menu_id), method: :delete, data: { confirm: "Are you sure?" } %>]
        </p>
      <% end %>
    </div>
  <% end %>
</section>
