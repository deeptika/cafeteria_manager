<section class="Cart">
  <h3 class="Cart-notice"> <%= notice %> </h3>

  <h1 class="Cart-title">Cart</h1>

  <table class="Cart-table">
    <tbody>
      <% @cart.each do |cart| %>
        <tr>
          <td> <%= cart.menu_item.menu_item_name %> </td>
          <td> <%= cart.menu_item.menu_item_price %> </td>
          <td> <%= cart.quantity %> </td>
          <td> <%= link_to "Edit", edit_cart_path(cart) %> </td>
          <td> <%= link_to "Remove", cart, method: :delete, data: { confirm: "Are you sure?" } %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2 > Total Amount = <%= @amount %> </h2>

  <div>
      <%= form_with url: orders_path do |form| %>
          <div class="Form-order">
              <%= submit_tag "Place Order", class: "Order-submit" %>
          </div>
      <% end %>
      <%= link_to "Back", new_order_path %>
  </div>
</section>
