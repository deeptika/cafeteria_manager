<section class="DisplayMenu">
    <% @menu_items.each do |menu_item| %>
        <table class="DisplayMenu-table">
            <tr class="DisplayMenu-details">
                <td class="DisplayMenu-itemName"> <%= menu_item.menu_item_name %> </p>
                <td class="DisplayMenu-itemPrice">â‚¹ <%= menu_item.menu_item_price %> </p>
                <td style="padding-right: 50px">
                    <%= form_with url: carts_path do |form| %>
                                    <%= hidden_field_tag "menu_item_id", menu_item.id %>
                                    <%= hidden_field_tag "menu_id", menu_item.menu_id %>
                                    <%= hidden_field_tag "user_id", @current_user.id %>
                                    <%= number_field_tag "quantity", 0,
                                                         min: 0, class: "Order-quantity",
                                                         :onclick => "submit()" %>

                    <% end %>
                </td>
            </tr>
        </table>
    <% end %>
</section>
