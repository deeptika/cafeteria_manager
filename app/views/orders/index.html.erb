<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Delivered at</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.user.first_name + " " + order.user.last_name %></td>
        <td><%= order.date %></td>
        <td><%= order.delivered_at %></td>
        <td><%= order.status %></td>
        <td><%= link_to "Show", order_items_path(order_id: order.id) %></td>
        <% if (not(@current_user.role == "customer")) and @your_order %>
          <td><%= link_to "Edit", edit_order_path(order) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

